{% extends 'base.html.twig' %}

{% form_theme formArticle 'bootstrap_5_layout.html.twig' %} 

{% block title %}
    {% if editMode %}
        Modifier un articles
    {% else %}
        Crée un articles
    {% endif %}
{% endblock %}


{% block body %}

    <!-- Permet de vérifier si le mode editMode et True ou false (see l.68 -> BlogController) -->
    {% if editMode %}
        <h1>Modifier l'article</h1>
    {% else %}
        <h1>Création d'un article !</h1>
    {% endif %}

    <!-- Affiche le formulaire créé dans le BlogController -->
    {{ form_start(formArticle) }}

    <!-- Affiche le formulaire champs par champs sur la page -->
    {{ form_row(formArticle.title, {'attr': {'placeholder': "Titre de l'article"}}) }}
    {{ form_row(formArticle.category) }}
    {{ form_row(formArticle.content, {'attr': {'placeholder': "Contenu de l'article"}}) }}
    {{ form_row(formArticle.image, {'attr': {'placeholder': "URL de l'image"}}) }}

    <!-- Ajout de boutton -->
    <button type ="submit" class="btn btn-success">
        {% if editMode %}
            Enregistrer les modifications
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>

    {{ form_end(formArticle) }}


{% endblock %}